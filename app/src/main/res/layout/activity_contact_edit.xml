<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_create"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.tylerstone.prm.contact.ContactEditActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/account"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/contact_create_name_text" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/briefcase"
            android:layout_gravity="center" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Job Title"
            android:ems="10"
            android:id="@+id/contact_create_occupation_text" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/employer"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapWords"
            android:hint="Employer"
            android:ems="10"
            android:id="@+id/contact_create_employer_text" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/email"
            android:layout_gravity="center" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="E-Mail"
            android:ems="10"
            android:id="@+id/contact_create_email_text" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@android:color/darker_gray"
            app:srcCompat="@drawable/phone"
            android:layout_gravity="center" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Phone Number"
            android:ems="10"
            android:id="@+id/contact_create_phone_text"
            android:maxLength="10"/>
    </LinearLayout>

    <Button
        android:text="Delete Contact"
        android:backgroundTint="@android:color/holo_red_dark"
        android:drawableTint="@android:color/white"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:onClick="deleteContact"
        android:id="@+id/contact_delete_button" />

</LinearLayout>
